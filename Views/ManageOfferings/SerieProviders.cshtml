
@model PaginatedList<Matriarchy.Models.ServiceSeriesRightJoinServices>

@{
    ViewData["Title"] = "ServiceSeries";
    var l_intReturnPage = ViewBag.returnPage;
}

<h2>Serie: @Model.Title</h2>


<table class="table">
    <thead>
        <tr>
            <th class="text-center">Offered</th>
            <th class="text-center">Service Provider</th>
            <th class="text-center">Seasons</th>
            <th class="text-center">Add / Remove</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td align="center">
                @if (item.SerieCD != null)
                {
                    <img src="~/images/GreenCircle.jpg" alt="Offered" class="img-responsive" />
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Seasons)
            </td>

            <td align="center">
                @if (item.SerieCD == null)
                {
                    <form action="@Url.Action("SerieAdd")" method="post">
                        <input type="hidden" name="v_strTitle" value="@Model.Title">
                        <input type="hidden" name="v_intPageNumber" value="@(Model.PageIndex)">
                        <input type="hidden" name="v_intServiceCD" value="@item.ID">
                        <input type="hidden" name="v_intSerieCD" value="@(Model.Filter)">
                        <input type="hidden" name="v_strSeriesName" value="@item.Description">
                        <button name="v_strAction" value="Prep" type="submit" class="btn btn-link">Add</button>
                    </form>
                }
                else
                {
                    <form action="@Url.Action("SerieProviders")" method="post">
                        <input type="hidden" name="v_intSerieCD" value="@(Model.Filter)">
                        <input type="hidden" name="v_intServiceCD" value="@item.ID">
                        <input type="hidden" name="v_strTitle" value="@Model.Title">
                        <input type="hidden" name="v_intPageNumber" value="@(Model.PageIndex)">
                        <input type="hidden" name="v_intSerieServiceID" value="@item.SerieServiceID">
                        <button name="v_strAddRemove" value="Remove" type="submit" class="btn btn-link">Remove</button>
                    </form>
                }
            </td>

            <td>
                @if (item.SerieCD != null)
                {
                    <form action="@Url.Action("SeasonEdit")" method="post">
                        <input type="hidden" name="v_intSerieCD" value="@(Model.Filter)">
                        <input type="hidden" name="v_intServiceCD" value="@item.ID">
                        <input type="hidden" name="v_strTitle" value="@item.Description">
                        <input type="hidden" name="v_intPageNumber" value="@(Model.PageIndex)">
                        <input type="hidden" name="v_strSerieName" value="@Model.Title">
                        <input type="hidden" name="v_strDescription" value="@item.Seasons">
                        <input type="hidden" name="v_intID" value="@item.SerieServiceID">
                        <button name="v_strAction" value="Prep" type="submit" class="btn btn-link">Edit Seasons</button>
                    </form>
                }
            </td>

        </tr>
        }
    </tbody>
</table>


<form action="@Url.Action("SerieProviders")" method="post">
    @if (Model.HasPreviousPage)
    {
        <input type="hidden" name="v_strTitle" value="@Model.Title">
        <input type="hidden" name="v_intSerieCD" value="@(Model.Filter)">
        <button type="submit" name="v_intPageNumber" value="@(Model.PageIndex -1)" class="btn btn-default">Previous</button>
    }
    else
    {
        <button class="btn btn-default" disabled="disabled">Previous</button>
    }
    @if (Model.HasNextPage)
    {
        <input type="hidden" name="v_strTitle" value="@Model.Title">
        <input type="hidden" name="v_intSerieCD" value="@(Model.Filter)">
        <button type="submit" Use name="v_intPageNumber" value="@(Model.PageIndex +1)" class="btn btn-default">Next</button>
    }
    else
    {
        <button class="btn btn-default" disabled="disabled">Next</button>
    }
</form>

<form action="@Url.Action("Series")" method="post">
    <button name="v_strMoveToItem" value="@Model.Title" type="submit" class="btn btn-link">Return to Series</button>
</form>