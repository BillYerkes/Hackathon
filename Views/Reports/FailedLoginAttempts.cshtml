@model PaginatedList<Matriarchy.Models.ReportFailedLoginAttempts>


<h2>Faild Login Attempts by User ID / IP Address</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                User ID
            </th>
            <th>
                IP Address
            </th>
            <th>
                Count
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IPAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Count)
                </td>

            </tr>
        }
    </tbody>
</table>

@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<a asp-action="FailedLoginAttempts"
   asp-route-v_intPageNumber="@(Model.PageIndex - 1)"
   class="btn btn-default @prevDisabled">
    Previous
</a>
<a asp-action="FailedLoginAttempts"
   asp-route-v_intPageNumber="@(Model.PageIndex + 1)"
   class="btn btn-default @nextDisabled">
    Next
</a>