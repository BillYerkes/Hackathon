@model PaginatedList<Matriarchy.Models.ServiceSeriesRightJoinSeries>

@{
    ViewData["Title"] = "ServiceSeries";
}

<h2>Provider: @Model.Title</h2>
<form action="@Url.Action("SerieCreate")" method="post">
    <input type="hidden" name="v_strAction" value="Prep">
    <input type="hidden" name="v_strTitle" value="@Model.Title">
    <input type="hidden" name="v_intServiceCD" value="@Model.Filter">
    <button name="v_intPageNumber" value="@(Model.PageIndex)" type="submit" class="btn btn-link">Add Serie to Catalog</button>
</form>



<div>
    <ul class="nav nav-tabs" role="tablist">
        <li role="presentation">
            <form action="@Url.Action("Networks")" method="post">
                <input type="hidden" name="v_intServiceCD" value="@Model.Filter">
                <button name="v_strTitle" value="@Model.Title" type="submit" class="btn btn-link">Live TV</button>
            </form>
        </li>
        <li role="presentation">
            <form action="@Url.Action("Movies")" method="post">
                <input type="hidden" name="v_intServiceCD" value="@Model.Filter">
                <button name="v_strTitle" value="@Model.Title" type="submit" class="btn btn-link">Movies</button>
            </form>
        </li>
        <li role="presentation" class="active">
            <a href="#third" aria-controls="third" role="tab" data-toggle="tab">Series</a>
        </li>

    </ul>

</div>
<table class="table">
    <thead>
        <tr>
            <th class="text-center">Provided</th>
            <th class="text-center">Serie</th>
            <th class="text-center">Add / Remove</th>
            <th class="text-center">Seasons</th>
            <th class="text-center">Edit Serie Name</th>
            <th class="text-center">Edit Season</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td align="center">
                    @if (item.ServiceCD != null)
                    {
                        <img src="~/images/GreenCircle.jpg" alt="Offered" class="img-responsive" />
                    }
                </td>
                <td align="left">
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td align="left">
                    @Html.DisplayFor(modelItem => item.Seasons)
                </td>
                <td align="center">
                    @if (item.ServiceCD == null)
                    {
                        <form action="@Url.Action("SerieAdd")" method="post">
                            <input type="hidden" name="v_strTitle" value="@Model.Title">
                            <input type="hidden" name="v_intPageNumber" value="@(Model.PageIndex)">
                            <input type="hidden" name="v_intServiceCD" value="@(Model.Filter)">
                            <input type="hidden" name="v_intSerieCD" value="@item.ID">
                            <input type="hidden" name="v_strSeriesName" value="@item.Description">
                            <button name="v_strAction" value="Prep" type="submit" class="btn btn-link">Add</button>
                        </form>
                    }
                    else
                    {
                        <form action="@Url.Action("Series")" method="post">
                            <input type="hidden" name="v_strTitle" value="@Model.Title">
                            <input type="hidden" name="v_intPageNumber" value="@(Model.PageIndex)">
                            <input type="hidden" name="v_intServiceCD" value="@(Model.Filter)">
                            <input type="hidden" name="v_intSerieServiceID" value="@item.SerieServiceID">
                            <button name="v_strAddRemove" value="Remove" type="submit" class="btn btn-link">Remove</button>
                        </form>
                    }
                </td>
                <td align="center">
                    <form action="@Url.Action("SerieEdit")" method="post">
                        <input type="hidden" name="v_strTitle" value="@Model.Title">
                        <input type="hidden" name="v_intPageNumber" value="@(Model.PageIndex)">
                        <input type="hidden" name="v_intServiceCD" value="@(Model.Filter)">
                        <input type="hidden" name="v_intID" value="@item.ID">
                        <input type="hidden" name="v_strDescription" value="@item.Description">
                        <button name="v_strAction" value="Prep" type="submit" class="btn btn-link">Edit Name</button>
                    </form>

                </td>
                <td>
                    @if (item.ServiceCD == null)
                    {
                        <form>
                            <button class="btn btn-link" disabled="disabled">Edit Seasons</button>
                        </form>
                    }
                    else
                    {
                <form action="@Url.Action("SeasonEdit")" method="post">
                    <input type="hidden" name="v_strTitle" value="@Model.Title">
                    <input type="hidden" name="v_intPageNumber" value="@(Model.PageIndex)">
                    <input type="hidden" name="v_intServiceCD" value="@item.ServiceCD">
                    <input type="hidden" name="v_intSerieCD" value="@item.ID">
                    <input type="hidden" name="v_strSerieName" value="@item.Description">
                    <input type="hidden" name="v_intID" value="@item.SerieServiceID">
                    <input type="hidden" name="v_strDescription" value="@item.Seasons">
                    <button name="v_strAction" value="Prep" type="submit" class="btn btn-link">Edit Seasons</button>
                </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>


<form action="@Url.Action("Series")" method="post">
    @if (Model.HasPreviousPage)
    {
        <input type="hidden" name="v_strTitle" value="@Model.Title">
        <input type="hidden" name="v_intServiceCD" value="@(Model.Filter)">
        <button type="submit" name="v_intPageNumber" value="@(Model.PageIndex -1)" class="btn btn-default">Previous</button>
    }
    else
    {
        <button class="btn btn-default" disabled="disabled">Previous</button>
    }
    @if (Model.HasNextPage)
    {
        <input type="hidden" name="v_strTitle" value="@Model.Title">
        <input type="hidden" name="v_intServiceCD" value="@(Model.Filter)">

        <button type="submit" Use name="v_intPageNumber" value="@(Model.PageIndex +1)" class="btn btn-default">Next</button>
    }
    else
    {
        <button class="btn btn-default" disabled="disabled">Next</button>
    }
</form>
