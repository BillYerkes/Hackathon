@model Matriarchy.Models.Service

@{
    
}

<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>Create New Service Provider</h2>
        </div>
        <div class="card-body">
            <div class="form-group row">
                <label asp-for="Description" class="col-sm-2 col-form-lable"></label>
                <div class="col-sm-10">
                    <input asp-for="Description" name="v_strDescription" class="form-control">
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Price" class="col-sm-2 col-form-lable"></label>
                <div class="col-sm-10">
                    <input asp-for="Price" class="form-control">
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>

            <div asp-validation-summary="All" class="text-danger"></div>

        </div>
        <div class="card-footer">
            <input type="submit" value="Create" class="btn btn-primary" style="width:auto" />
            <a asp-action="List" class="btn btn-primary" style="width:auto">Cancel</a>
        </div>


    </div>
</form>