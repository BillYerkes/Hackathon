@model Matriarchy.Models.ServiceEdit

@{
    
}

    <form method="post">
        <div class="card">
            <div class="card-header">
                <h2>Edit Service Provider</h2>
            </div>
            <div class="card-body">
                <div class="form-group row">
                    <label asp-for="Description" class="col-sm-2 col-form-lable"></label>
                    <div class="col-sm-10">
                        <input asp-for="Description" name="v_strDescription" class="form-control">
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Price" class="col-sm-2 col-form-lable"></label>
                    <div class="col-sm-10">
                        <input asp-for="Price" name="v_decPrice" class="form-control">
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
            <div class="card-footer">
                <input type="hidden" name="v_strAction" value="Update">
                <input type="hidden" name="v_intID" value="@Model.ID">
                <input type="hidden" name="v_strDescription" value="@Model.Description">
                <input type="hidden" name="v_intPageNumber" value="@Model.pageNumber">
                <input type="hidden" name="v_decPrice" value="@Model.Price">
                <button formaction="Edit" type="submit" class="btn btn-primary">Save</button>
                <button formaction="List" type="submit" class="btn btn-primary">Cancel</button>
            </div>
        </div>
    </form>


