@model PaginatedList<Matriarchy.Models.Service>

@{
    ViewData["Title"] = "Manage Services";
}

<h2>Service Providers</h2>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th class="text-center">Service Provider</th>
            <th class="text-left">Price</th>
            <th class="text-center">Edit</th>
            <th class="text-center">Live TV</th>
            <th class="text-center">Movies</th>
            <th class="text-center">Series</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td align="right">
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td align="center">
                    <form action="@Url.Action("Edit")" method="post">
                        <input type="hidden" name="v_intID" value="@item.ID">
                        <input type="hidden" name="v_strDescription" value="@item.Description">
                        <input type="hidden" name="v_decPrice" value="@item.Price">
                        <input type="hidden" name="v_intPageNumber" value="@(Model.PageIndex)">
                        <button name="v_strAction" value="Prep" type="submit" class="btn btn-link">Edit</button>
                    </form>
                </td>
                <td align="center">
                    <form action="@Url.Action("Networks")" method="post">
                        <input type="hidden" name="v_intServiceCD" value="@item.ID">
                        <button name="v_strTitle" value="@item.Description" type="submit" class="btn btn-link">Live TV</button>
                    </form>
                </td>
                <td align="center">
                    <form action="@Url.Action("Movies")" method="post">
                        <input type="hidden" name="v_intServiceCD" value="@item.ID">
                        <button name="v_strTitle" value="@item.Description" type="submit" class="btn btn-link">Movies</button>
                    </form>
                </td>
                <td align="center">
                    <form action="@Url.Action("Series")" method="post">
                        <input type="hidden" name="v_intServiceCD" value="@item.ID">
                        <button name="v_strTitle" value="@item.Description" type="submit" class="btn btn-link">Series</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>


<form action="@Url.Action("List")" method="post">
    @if (Model.HasPreviousPage)
    {
        <button type="submit" name="v_intPageNumber" value="@(Model.PageIndex -1)" class="btn btn-default">Previous</button>
    }
    else
    {
        <button class="btn btn-default" disabled="disabled">Previous</button>
    }
    @if (Model.HasNextPage)
    {
        <button type="submit" Use name="v_intPageNumber" value="@(Model.PageIndex +1)" class="btn btn-default">Next</button>
    }
    else
    {
        <button class="btn btn-default" disabled="disabled">Next</button>
    }
</form>
