@model PaginatedList<Matriarchy.Models.ServiceNetworksRightJoinNetworks>

@{
    ViewData["Title"] = "ServiceNetworks";
}

<h2>Provider: @Model.Title</h2>
<form action="@Url.Action("NetworkCreate")" method="post">
    <input type="hidden" name="v_strAction" value="Prep">
    <input type="hidden" name="v_strTitle" value="@Model.Title">
    <input type="hidden" name="v_intServiceCD" value="@Model.Filter">
    <button name="v_intPageNumber" value="@(Model.PageIndex)" type="submit" class="btn btn-link">Add Network to Catalog</button>
</form>

<div>
    <ul class="nav nav-tabs" role="tablist">
        <li role="presentation" class="active">
            <a href="first" id="openTab1" aria-controls="first" role="tab" data-toggle="tab">Live TV</a>
        </li>
        <li role="presentation">
            <form action="@Url.Action("Movies")" method="post">
                <input type="hidden" name="v_intServiceCD" value="@Model.Filter">
                <button name="v_strTitle" value="@Model.Title" type="submit" class="btn btn-link">Movies</button>
            </form>
        </li>
        <li role="presentation">
            <form action="@Url.Action("Series")" method="post">
                <input type="hidden" name="v_intServiceCD" value="@Model.Filter">
                <button name="v_strTitle" value="@Model.Title" type="submit" class="btn btn-link">Series</button>
            </form>
        </li>
    </ul>


</div>

<table class="table">
    <thead>
        <tr>
            <th class="text-center">Provided</th>
            <th class="text-center">Network</th>
            <th class="text-center">Add / Remove</th>
            <th class="text-center">Edit Network Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td align="center">
                @if (item.ServiceCD != null)
                {
                    <img src="~/images/GreenCircle.jpg" alt="Offered" class="img-responsive" />
                }
            </td>
            <td align="left">

                @Html.DisplayFor(modelItem => item.Description)

            </td>
            <td align="center">
                @if (item.ServiceCD == null)
                {
                    <form action="@Url.Action("Networks")" method="post">
                        <input type="hidden" name="v_strTitle" value="@Model.Title">
                        <input type="hidden" name="v_intPageNumber" value="@(Model.PageIndex)">
                        <input type="hidden" name="v_intServiceCD" value="@(Model.Filter)">
                        <input type="hidden" name="v_intNetworkCD" value="@item.ID">
                        <button name="v_strAddRemove" value="Add" type="submit" class="btn btn-link">Add</button>
                    </form>
                }
                else
                {
                    <form action="@Url.Action("Networks")" method="post">
                        <input type="hidden" name="v_strTitle" value="@Model.Title">
                        <input type="hidden" name="v_intPageNumber" value="@(Model.PageIndex)">
                        <input type="hidden" name="v_intServiceCD" value="@(Model.Filter)">
                        <input type="hidden" name="v_intNetworkServiceID" value="@item.NetworkServiceID">
                        <button name="v_strAddRemove" value="Remove" type="submit" class="btn btn-link">Remove</button>
                    </form>
                }
            </td>
            <td align="center">
                <form action="@Url.Action("NetworkEdit")" method="post">
                    <input type="hidden" name="v_strTitle" value="@Model.Title">
                    <input type="hidden" name="v_intPageNumber" value="@(Model.PageIndex)">
                    <input type="hidden" name="v_intServiceCD" value="@(Model.Filter)">
                    <input type="hidden" name="v_strDescription" value="@item.Description">
                    <input type="hidden" name="v_intID" value="@item.ID">
                    <button name="v_strAction" value="Prep" type="submit" class="btn btn-link">Edit Name</button>
                </form>
            </td>
        </tr>
        }
    </tbody>
</table>


<form action="@Url.Action("Networks")" method="post">
    @if (Model.HasPreviousPage)
    {
        <input type="hidden" name="v_strTitle" value="@Model.Title">
        <input type="hidden" name="v_intServiceCD" value="@(Model.Filter)">
        <button type="submit" name="v_intPageNumber" value="@(Model.PageIndex -1)" class="btn btn-default">Previous</button>
    }
    else
    {
        <button class="btn btn-default" disabled="disabled">Previous</button>
    }
    @if (Model.HasNextPage)
    {
        <input type="hidden" name="v_strTitle" value="@Model.Title">
        <input type="hidden" name="v_intServiceCD" value="@(Model.Filter)">

        <button type="submit" Use name="v_intPageNumber" value="@(Model.PageIndex +1)" class="btn btn-default">Next</button>
    }
    else
    {
        <button class="btn btn-default" disabled="disabled">Next</button>
    }
</form>

