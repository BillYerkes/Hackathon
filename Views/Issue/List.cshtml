@model PaginatedList<Matriarchy.Models.Issue>

@{
    ViewData["Title"] = "User Issues";
}

<h2>Issues</h2>

<table class="table">
    <thead>
        <tr>

            <th>
                Subject
            </th>
            <th>
                Date Time
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Subject)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IssueDateTime)
                </td>

                <td>
                    <a asp-action="Details" asp-route-v_intIssueID="@item.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>


@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}


<a asp-controller="Issue"
   asp-action="List"
   asp-route-v_intPageNumber="@(Model.PageIndex - 1)"
   asp-route-v_strFullList="@Model.SearchString"
   class="btn btn-default @prevDisabled">
    Previous
</a>
<a asp-controller="Issue"
   asp-action="List"
   asp-route-v_intPageNumber="@(Model.PageIndex + 1)"
    asp-route-v_strFullList="@Model.SearchString"
   class="btn btn-default @nextDisabled">
    Next
</a>