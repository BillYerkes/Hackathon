@model PaginatedList<Matriarchy.Models.Service>

@{
    ViewData["Title"] = "Services";
}

<h2>Services</h2>

<table class="table">
    <thead>
        <tr>
            <th class="text-center">Description</th>
            <th class="text-center">Price</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td align="left">
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td align="center">
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                    <form action="" method="post">
                        <input type="hidden" name="v_strTitle" value="@item.Description">
                        <input type="hidden" name="v_intServiceCD" value="@item.ID">
                        <button formaction="ServiceNetworks"  type="submit" class="btn btn-link">Live TV</button> |
                        <button formaction="ServiceMovies"  type="submit" class="btn btn-link">Movies</button> |
                        <button formaction="ServiceSeries"  type="submit" class="btn btn-link">Binge Series</button>
                    </form>
            </td>
        </tr>
        }
    </tbody>
</table>

<form action="@Url.Action("Service")" method="post">
    @if (Model.HasPreviousPage)
    {
        <button type="submit" name="v_intPageNumber" value="@(Model.PageIndex -1)" class="btn btn-default">Previous</button>
    }
    else
    {
        <button class="btn btn-default" disabled="disabled">Previous</button>
    }
    @if (Model.HasNextPage)
    {
        <button type="submit" Use name="v_intPageNumber" value="@(Model.PageIndex +1)" class="btn btn-default">Next</button>
    }
    else
    {
        <button class="btn btn-default" disabled="disabled">Next</button>
    }
</form>