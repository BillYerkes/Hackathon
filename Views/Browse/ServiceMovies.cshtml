
@model PaginatedList<Matriarchy.Models.ServiceMovie>

@{
    ViewData["Title"] = "ServiceMovies";
}

<h2>@Model.Title:  Movie Offerings</h2>
<div>
    <ul class="nav nav-tabs" role="tablist">
        <li role="presentation">
            <form action="@Url.Action("ServiceNetworks")" method="post">
                <input type="hidden" name="v_intServiceCD" value="@Model.Filter">
                <button name="v_strTitle" value="@Model.Title" type="submit" class="btn btn-link">Live TV</button>
            </form>
        </li>
        <li role="presentation" class="active">
            <a href="#second" aria-controls="second" role="tab" data-toggle="tab">Movies</a>
        </li>
        <li role="presentation">
            <form action="@Url.Action("ServiceSeries")" method="post">
                <input type="hidden" name="v_intServiceCD" value="@Model.Filter">
                <button name="v_strTitle" value="@Model.Title" type="submit" class="btn btn-link">Series</button>
            </form>
        </li>


    </ul>

</div>

<table class="table">
    <thead>
        <tr>
            <th class="text-center">Movie Title</th>
            @if (User.Identity.IsAuthenticated)
            {
                <th class="text-center">Rating</th>
                <th class="text-center">Rate</th>
                <th class="text-center">Remove Rating</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td align="left" >
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                @if (User.Identity.IsAuthenticated)
                {
                    <td align="center" >
                        @Html.DisplayFor(modelItem => item.Rating)
                    </td>

                    <td align="center" >
                        <form action="@Url.Action("ServiceMovies")" method="post">
                            <input type="hidden" name="v_strTitle" value="@Model.Title">
                            <input type="hidden" name="v_intPageNumber" value="@(Model.PageIndex)">
                            <input type="hidden" name="v_intMovieCD" value="@item.MovieCD">
                            <input type="hidden" name="v_intServiceCD" value="@Model.Filter">
                            <button name="v_intRating" value="1" type="submit" class="btn btn-link">1</button>
                            <button name="v_intRating" value="2" type="submit" class="btn btn-link">2</button>
                            <button name="v_intRating" value="3" type="submit" class="btn btn-link">3</button>
                            <button name="v_intRating" value="4" type="submit" class="btn btn-link">4</button>
                            <button name="v_intRating" value="5" type="submit" class="btn btn-link">5</button>
                        </form>
                    </td>

                    <td align="center" >

                        @if (item.Rating != null)
                        {
                            <form action="@Url.Action("ServiceMovies")" method="post">
                                <input type="hidden" name="v_strTitle" value="@Model.Title">
                                <input type="hidden" name="v_intPageNumber" value="@(Model.PageIndex)">
                                <input type="hidden" name="v_intMovieCD" value="@item.MovieCD">
                                <input type="hidden" name="v_intServiceCD" value="@Model.Filter">
                                <button name="v_strClear" value="Clear" type="submit" class="btn btn-link">Remove Rating</button>
                            </form>
                        }
                        else
                        {
                            <form>
                                <button class="btn btn-link" disabled="disabled">Remove Rating</button>
                            </form>
                        }

                    </td>

                }

            </tr>
        }
    </tbody>
</table>

<form action="@Url.Action("ServiceMovies")" method="post">
    <input type="hidden" name="v_strTitle" value="@Model.Title">
    <input type="hidden" name="v_intServiceCD" value="@Model.Filter">
    @if (Model.HasPreviousPage)
    {
        <button type="submit" name="v_intPageNumber" value="@(Model.PageIndex -1)" class="btn btn-default">Previous</button>
    }
    else
    {
        <button class="btn btn-default" disabled="disabled">Previous</button>
    }
    @if (Model.HasNextPage)
    {
        <button type="submit" Use name="v_intPageNumber" value="@(Model.PageIndex +1)" class="btn btn-default">Next</button>
    }
    else
    {
        <button class="btn btn-default" disabled="disabled">Next</button>
    }
</form>

