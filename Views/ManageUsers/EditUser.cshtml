@model Matriarchy.Models.EditUser

@{
    ViewBag.Title = "Edit User";
}

<h1>Edit User</h1>

<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-lable"></label>
        <div class="col-sm-10">
            <input asp-for="Id" class="form-control" , readonly>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Email" class="col-sm-2 col-form-lable"></label>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="AccessFailedCount" class="col-sm-2 col-form-lable"></label>
        <div class="col-sm-10">
            <input asp-for="AccessFailedCount" class="form-control">
            <span asp-validation-for="AccessFailedCount" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="PhoneNumber" class="col-sm-2 col-form-lable"></label>
        <div class="col-sm-10">
            <input asp-for="PhoneNumber" class="form-control">
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="LockoutEnd" class="col-sm-2 col-form-lable"></label>
        <div class="col-sm-10">
            <input asp-for="LockoutEnd" disabled class="form-control">
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <input type="hidden" name="v_strUserID" value="@Model.Id">
            <input type="hidden" name="v_strAction" value="Update">
            <button formaction="EditUser" type="submit" class="btn btn-primary">Update</button>
            <button formaction="List" type="submit" class="btn btn-primary">Cancel</button>
        </div>
    </div>



    <div class="card">
        <div class="card-header">
            <h3>User Roles</h3>
        </div>
        <div class="card-body">
            @if (Model.Roles.Any())
            {
                foreach (var role in Model.Roles)
                {
                    <h5 class="card-title">@role</h5>
                }
            }
            else
            {
                <h5 class="card-title">None at the moement</h5>
            }
        </div>
        <div class="card-footer">
            <input type="hidden" name="v_strUserID" value="@Model.Id">
            <input type="hidden" name="v_strActionUR" value="Prep">
            <button formaction="ManageUserRoles" type="submit" class="btn btn-primary">Manage Roles</button>
        </div>
    </div>
</form>
